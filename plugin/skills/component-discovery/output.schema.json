{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Component Discovery Output",
  "description": "Output from component discovery, including detected project type and discovered components.",
  "type": "object",
  "properties": {
    "project_type": {
      "type": "string",
      "enum": [
        "fullstack",
        "backend",
        "frontend",
        "custom"
      ],
      "description": "Detected project type based on analysis"
    },
    "components": {
      "type": "array",
      "description": "Discovered components with their configurations",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Component name identifier"
          },
          "type": {
            "type": "string",
            "enum": [
              "server",
              "webapp",
              "database",
              "contract",
              "helm",
              "config"
            ],
            "description": "Component type classification"
          },
          "settings": {
            "type": "object",
            "description": "Component-specific configuration settings"
          }
        }
      }
    }
  },
  "required": [
    "project_type",
    "components"
  ]
}
