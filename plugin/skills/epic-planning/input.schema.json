{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Epic Planning Input",
  "description": "Input parameters for planning an epic with its child changes, dependencies, and cross-cutting concerns.",
  "type": "object",
  "properties": {
    "epic_name": {
      "type": "string",
      "description": "Epic directory name (lowercase, hyphens)"
    },
    "epic_title": {
      "type": "string",
      "description": "Display title for the epic"
    },
    "epic_description": {
      "type": "string",
      "description": "Description of the epic's scope and goals"
    },
    "domain": {
      "type": "string",
      "description": "Business domain for the epic"
    },
    "issue": {
      "type": "string",
      "description": "Issue reference (e.g., PROJ-123)"
    },
    "child_changes": {
      "type": "array",
      "description": "Child change definitions that compose the epic",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Child change directory name"
          },
          "title": {
            "type": "string",
            "description": "Child change display title"
          },
          "description": {
            "type": "string",
            "description": "Brief description of the child change"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Names of other child changes this one depends on"
          }
        }
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Epic-level acceptance criteria that must be met"
    },
    "cross_cutting_concerns": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Cross-cutting concerns that affect multiple child changes"
    }
  },
  "required": [
    "epic_name",
    "epic_title",
    "epic_description",
    "domain",
    "child_changes"
  ]
}
